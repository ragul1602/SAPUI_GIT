<mvc:View controllerName="com.smax.tab.ZPROJECT_DEMO9.controller.firstPage1" xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml"  xmlns="sap.m"
		xmlns:core="sap.ui.core"
>
	<App id="idAppControl">
		<pages>
			<Page title="{p1>title}">
				<content>
					<Toolbar>
						<ComboBox change="onChange" selectionChange="onChange" id="oComboBox" items="{path: 'm1>/d/results/element/pernr'}">
							<core:Item text="{text}"/>
						</ComboBox>
						<Button text="Filter" press="onSearch" icon="sap-icon://filter"/>
						<Button text="Reset" press="onReset" type="Transparent"/>
						<ToolbarSpacer/>
					</Toolbar>
					
					<Table growing="true" growingThreshold='5' 
					includeItemInSelection='true'
					inset="false" enableBusyIndicator='true'
						items="{path : 'm1>/d/results/element', sorter : { path : 'lastName', descending : true }, startIndex : 0}" showOverlay='True'>
						<columns>
							<Column>
								<Text text="{p1>empno}"/>
							</Column>
							<Column>
								<Text text="{p1>empna}"/>
							</Column>
							<Column>
								<Text text="{p1>email}"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<!--<cells>-->
								<Text text='{m1>pernr}'/>
								<Text text='{m1>firstName} {m1>lastName}'/>
								<Text text='{m1>email}'/>
								<!--</cells>-->
							</ColumnListItem>
						</items>
					</Table>
					<Button text="Next page" press='onNext'/>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>