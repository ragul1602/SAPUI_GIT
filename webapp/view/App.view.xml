<mvc:View controllerName="com.batch41.table.ZBATCH41_TABLES.controller.App" xmlns:mvc="sap.ui.core.mvc"
	xmlns:html="http://www.w3.org/1999/xhtml" displayBlock="true" xmlns="sap.m">
	<App id="idAppControl">
		<pages>
			<Page title="{i18n>title}">
				<content>
					<Table items="{ path : '/d/results/element', sorter : { path : 'firstName', descending : true }}">
						<columns>
							<Column>
								<Text text="{i1>empNo}"/>
							</Column>
							<Column>
								<Text text="{i18n>fullname}"/>
							</Column>
							<Column>
								<Text text="{i18n>email}"/>
							</Column>
						</columns>
						<items>
							<ColumnListItem>
								<cells>
									<Text text="{pernr}"/>
									<Text text="{firstName} {lastName}"/>
									<Text text="{email}"/>
								</cells>
							</ColumnListItem>
						</items>
					</Table>
				</content>
			</Page>
		</pages>
	</App>
</mvc:View>