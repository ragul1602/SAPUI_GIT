<mvc:View
	controllerName="sap.m.sample.StandardListItemInfo.List"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m">
	<List
		headerText="Products"
		items="{
			path: '/Products',
			sorter: {
				path: 'Name'
			}
		}">
		<items>
			<StandardListItem
				title="{ProductID }"
				info="{ProductName}"
				infoState="{
					path: 'UnitsInStock',
					formatter: 'sap.m.sample.StandardListItemInfo.Formatter.status'
				}"
				 />
		</items>
	</List>
</mvc:View>